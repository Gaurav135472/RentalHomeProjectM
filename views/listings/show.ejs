<%= layout("/layouts/boilerplate") %>
<body>
    <h3>Listing Details:</h3>
    <ul>
        <li>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <li> &#36; <%= listing.price.toLocaleString("en-CA")%>
        </li>
        <li>
            <%= listing.location %>
        </li>
        <li>
            <%= listing.country %>
        </li>
    </ul>
    <br>
    <a href="/listings/<%= listing.id %>/edit">Edit form</a>
    <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
        <button>Delete form</button>
    </form>
</body>
