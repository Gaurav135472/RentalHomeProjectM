<%= layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2 mt-3">
    <h3>Listing Details:</h3>
    </div>
    
    <div class="card col-6 offset-2">
        <div class="card show-card" style="width: 18rem;">
            <img src="<%= listing.image %>" class="card-img-top show-img " alt="Listing_Image">
            <div class="card-body">
                <p class="card-text">
               <b> <%= listing.title %> </b> <br>
                <%= listing.description %> <br>
                &#36; <%= listing.price.toLocaleString("en-CA")%> <br>
                <%= listing.location %>
                <%= listing.country %>
                </p>
            </div>
        </div>
    </div>
    <div class="d-flex mb-3">
    <a href="/listings/<%= listing.id %>/edit" class="btn btn-success col-1 offset-2">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE" >
        <button class="btn btn-danger offset-4">Delete</button>
    </form>
    </div>
</div>